@using e_Clinic.DataAccess.Entities
@using e_Clinic.Models.ViewModels.PatientViewModels
@{
    ViewData["Title"] = "Patient List";
}

@model PatientListViewModel


@if (Model.Patients is not null)
{
<section class="container mx-auto p-6 w-3/4">
    <div class="w-full mb-3 overflow-hidden rounded-lg shadow-lg">
        <div class="w-full overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-md w-10 tracking-wide text-left text-teal-900 bg-white uppercase border-b-2 border-teal-600">
                            <th class="px-4 py-3 font-light text-lg">Patient</th>
                        <th class="px-4 py-3">&nbsp;</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                @foreach (var item in Model.Patients!)
                {
                    <tr class="text-gray-700 even:bg-white odd:bg-teal-50 hover:bg-emerald-100">
                        <td class="px-4 py-3 border">
                            <div class="flex items-center text-md">
                                <div class="relative w-8 h-8 mr-3 rounded-full md:block">
                                    <img class="object-cover w-full h-full rounded-full" src="https://images.pexels.com/photos/5212324/pexels-photo-5212324.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="" loading="lazy"/>
                                    <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                                </div>
                                <div>
                                    <p class="font-semibold text-black">@item.FirstName @item.LastName</p>
                                        <p class="text-sm text-gray-600 mt-1">
                                            <span class="text-slate-900 text-bold">Date of Birth:</span> @item.DateOfBirth.ToString("dd MMMM yyyy")
                                        </p>
                                </div>
                            </div>
                        </td>
                         <td class="px-4 py-3 text-xs border">
                            <a href="#"  class="px-2 py-2 me-1 font-semibold uppercase leading-tight text-yellow-700 bg-yellow-100 rounded-sm transition ease-in-out delay-150 hover:bg-yellow-200">Info</a>
                            <a asp-controller="Visit" asp-action="Add" asp-route-patientId="@item.Id" class="px-2 py-2 font-semibold uppercase leading-tight text-blue-700 bg-blue-100 rounded-sm transition ease-in-out delay-150 hover:bg-blue-200">Add Visit</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="flex justify-end">
            <nav aria-label="Page navigation">
                <ul class="inline-flex -space-x-px text-sm shadow-lg overflow-hidden">
                    <li>
                        <a asp-controller="Patient" asp-action="Index" asp-route-pageNumber="@((Model.CurrentPage - 1 > 0) ? Model.CurrentPage - 1 : 1)" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        @if (i == Model.CurrentPage)
                        {
                            <li>
                                <a asp-controller="Patient" asp-action="Index" asp-route-pageNumber="@i" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-teal-100 border border-gray-300 hover:bg-gray-100 hover:text-gray-700">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-controller="Patient" asp-action="Index" asp-route-pageNumber="@i" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">@i</a>
                            </li>
                        }
                    }   
                    <li>
                        <a asp-action="Index" asp-route-pageNumber="@((Model.CurrentPage + 1 > Model.TotalPages) ? Model.CurrentPage : Model.CurrentPage + 1)" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</section> 
}
