@using e_Clinic.DataAccess.Entities
@{
    ViewData["Title"] = "Patient List";
}

@model IEnumerable<Patient>


@if (Model is not null)
{
<section class="container mx-auto p-6 w-3/4">
    <div class="w-full mb-8 overflow-hidden rounded-lg shadow-lg">
        <div class="w-full overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-md w-10 font-semibold tracking-wide text-left text-white bg-teal-700 uppercase border-b border-gray-600">
                        <th class="px-4 py-3">Name</th>
                        <th class="px-4 py-3">&nbsp;</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                @foreach (var item in Model)
                {
                    <tr class="text-gray-700 even:bg-white odd:bg-teal-50 hover:bg-teal-100">
                        <td class="px-4 py-3 border">
                            <div class="flex items-center text-md">
                                <div class="relative w-8 h-8 mr-3 rounded-full md:block">
                                    <img class="object-cover w-full h-full rounded-full" src="https://images.pexels.com/photos/5212324/pexels-photo-5212324.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="" loading="lazy"/>
                                    <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                                </div>
                                <div>
                                    <p class="font-semibold text-black">@item.FirstName @item.LastName</p>
                                        <p class="text-sm text-gray-600 mt-1">
                                            <span class="text-slate-900 text-bold">Date of Birth:</span> @item.DateOfBirth.ToString("dd MMMM yyyy")
                                        </p>
                                </div>
                            </div>
                        </td>
                         <td class="px-4 py-3 text-xs border">
                            <a href="#"  class="px-2 py-2 me-1 font-semibold uppercase leading-tight text-yellow-700 bg-yellow-100 rounded-sm transition ease-in-out delay-150 hover:bg-yellow-200">Info</a>
                            <a asp-controller="Visit" asp-action="Add" asp-route-patientId="@item.Id" class="px-2 py-2 font-semibold uppercase leading-tight text-blue-700 bg-blue-100 rounded-sm transition ease-in-out delay-150 hover:bg-blue-200">Add Visit</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</section> 
}
