@using e_Clinic.DataAccess.Entities
@using e_Clinic.Models.ViewModels.PatientViewModels
@{
    ViewData["Title"] = "Delete Patient";
}

@model DeletePatientViewModel

<main class="px-6 sm:px-12 md:px-36 pt-6">
    <form method="post" asp-action="Delete">
        <input type="hidden" value="@Model.Id"/>
        <div class="flex flex-col items-center justify-center w-3/4 md:w-2/4 m-auto p-12 bg-white rounded-lg border-2 border-red-500 shadow-lg">
            <img src="~/icons/delete.svg" class="w-[100px]" alt="trash can icon" />
            <div class="text-center mt-4 uppercase text-red-500 text-lg">You are about to delete patient:</div>
            <div class="flex flex-col mt-5 uppercase items-center justify-center border border-teal-200 p-6 rounded-lg bg-teal-50">
                <div class="text-teal-600 font-bold text-lg">@Model.FirstName @Model.LastName</div>
                <div class="text-teal-600">@Model.DateOfBirth?.ToString("dd MMMM yyyy")</div>
                <div class="text-teal-600">@Model.Email</div>
            </div>
            <div class="text-center mt-6 uppercase text-red-500 text-lg">Are you sure you want to delete this patient?</div>
            <div class="mt-6">
                <a asp-action="Index" type="button" class="focus:outline-none text-white uppercase bg-teal-400 hover:bg-teal-500 focus:ring-4 focus:ring-teal-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900">Cancel</a>
                <button type="submit" class="focus:outline-none text-white bg-red-500 hover:bg-red-800 focus:ring-4 focus:ring-red-300 uppercase font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Delete</button>
            </div>
        </div>
    </form>
</main>