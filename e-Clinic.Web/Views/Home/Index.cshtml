@{
    ViewData["Title"] = "Home Page";
}
<div class="container items-center px-6 mx-auto mt-10 space-y-0 md:space-y-0 md:flex-row ">
    @if (User.Identity is {IsAuthenticated: true })
    {
            <table class="table-auto mx-auto">
                <thead>
                <tr>
                    <th class="px-4 py-2 text-emerald-600">Type</th>
                    <th class="px-4 py-2 text-emerald-600">Value</th>
                </tr>
                </thead>
                <tbody>
                    @foreach(var claim in User.Claims)
                    {
                        <tr>
                            <td class="border border-emerald-500 px-4 py-2 text-emerald-600 font-medium">@claim.Type</td>
                            <td class="border border-emerald-500 px-4 py-2 text-emerald-600 font-medium">@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
    }
</div>