@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-xl text-teal-700 uppercase text-center">
    @ViewData["Title"]
</h1>
<section >
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <div class="flex flex-col mb-4">
            <label asp-for="Input.Email" class="mb-1 text-xs sm:text-sm tracking-wide text-teal-600">
                Email
            </label>
            <div class="relative">
                <div class="absolute flex border border-transparent left-0 top-0 h-full w-10">
                    <div class="flex items-center justify-center rounded-tl rounded-bl z-10 bg-teal-50 text-teal-700 text-lg h-full w-full">
                        <svg viewBox="0 0 32 32" width="36" height="36" stroke="currentColor" stroke-width="1" fill="currentColor"
                             stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                            <g id="Layer_3" data-name="Layer 3">
                                <path d="m30.853 13.87a15 15 0 0 0 -29.729 4.082 15.1 15.1 0 0 0 12.876 12.918 15.6 15.6 0 0 0 2.016.13 14.85 14.85 0 0 0 7.715-2.145 1 1 0 1 0 -1.031-1.711 13.007 13.007 0 1 1 5.458-6.529 2.149 2.149 0 0 1 -4.158-.759v-10.856a1 1 0 0 0 -2 0v1.726a8 8 0 1 0 .2 10.325 4.135 4.135 0 0 0 7.83.274 15.2 15.2 0 0 0 .823-7.455zm-14.853 8.13a6 6 0 1 1 6-6 6.006 6.006 0 0 1 -6 6z"/>
                            </g>
                        </svg>
                    </div>
                </div>
                <input asp-for="Input.Email" placeholder="Email" autocomplete="email"
                       class="text-sm sm:text-base relative w-full border border-teal-600 rounded placeholder-teal-600 focus:border-teal-500 focus:shadow-inner focus:shadow-lg focus:outline-none py-2 pr-2 pl-12">
            </div>
            <span asp-validation-for="Input.Password" class="text-red-500"></span>
        </div>
        <div class="flex flex-col mb-4">
            <label asp-for="Input.Password" class="mb-1 text-xs sm:text-sm tracking-wide text-teal-600">
                Password
            </label>
            <div class="relative">
                <div class="absolute flex border border-transparent left-0 top-0 h-full w-10">
                    <div class="flex items-center justify-center rounded-tl rounded-bl z-10 bg-teal-50 text-teal-700 text-lg h-full w-full">
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1" fill="currentColor"
                             stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                            <path d="m18.75 9h-.75v-3c0-3.309-2.691-6-6-6s-6 2.691-6 6v3h-.75c-1.24 0-2.25 1.009-2.25 2.25v10.5c0 1.241 1.01 2.25 2.25 2.25h13.5c1.24 0 2.25-1.009 2.25-2.25v-10.5c0-1.241-1.01-2.25-2.25-2.25zm-10.75-3c0-2.206 1.794-4 4-4s4 1.794 4 4v3h-8zm5 10.722v2.278c0 .552-.447 1-1 1s-1-.448-1-1v-2.278c-.595-.347-1-.985-1-1.722 0-1.103.897-2 2-2s2 .897 2 2c0 .737-.405 1.375-1 1.722z"/>
                        </svg>
                    </div>
                </div>
                <input asp-for="Input.Password" placeholder="Password" autocomplete="current-password"
                       class="text-sm sm:text-base relative w-full border border-teal-600 rounded placeholder-teal-600 focus:border-teal-500 focus:shadow-inner focus:shadow-lg focus:outline-none py-2 pr-2 pl-12">
            </div>
        </div>
        <span asp-validation-for="Input.Password" class="text-red-500"></span>
        <div>
            <label asp-for="Input.RememberMe" class="form-label">
                <input asp-for="Input.RememberMe"/>
                <span class="text-teal-700">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </span>
            </label>
        </div>
        <button id="login-submit" type="submit" class="group relative h-10 w-full overflow-hidden rounded bg-teal-700 text-md tracking-wide uppercase text-white">
            Login
            <div class="absolute inset-0 h-full w-full scale-0 rounded transition-all duration-300 group-hover:scale-100 group-hover:bg-white/30"></div>
        </button>
        @* <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div> *@
    </form>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}