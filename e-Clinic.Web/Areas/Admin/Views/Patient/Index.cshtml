@using e_Clinic.DataAccess.Entities
@using e_Clinic.Models.ViewModels.PatientViewModels
@{
    ViewData["Title"] = "Patient List";
}

@model PatientListViewModel


@if (Model.Patients is not null)
{
<section class="container mx-auto p-6 w-3/4">
    <div class="w-full mb-3 overflow-hidden rounded-lg shadow-lg">
        <div class="w-full overflow-x-auto">
            <table class="w-full">
                <thead>
                        <tr class="text-md w-10 tracking-wide text-left text-teal-900 bg-white uppercase border-b-2 border-teal-600">
                            <th class="px-4 py-3 font-light text-lg items-center flex">
                                <svg class="w-8 me-2" xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" x="0" y="0" viewBox="0 0 64 64" style="enable-background:new 0 0 512 512" xml:space="preserve" class=""><g><g data-name="18-medical-record-folder"><path d="M32 14h10v2H32zM32 18h10v2H32zM32 22h10v2H32zM32 26h10v2H32zM20.872 15.818a3.587 3.587 0 0 0 2.256 0A3 3 0 0 0 26 18h1a1 1 0 0 1 1 1v3h2v-3a3 3 0 0 0-3-3h-1a1 1 0 0 1-1-1v-.382A3.966 3.966 0 0 0 26 12v-2a4 4 0 0 0-8 0v2a3.966 3.966 0 0 0 1 2.618V15a1 1 0 0 1-1 1h-1a3 3 0 0 0-3 3v3h2v-3a1 1 0 0 1 1-1h1a3 3 0 0 0 2.872-2.182zM20 10a2 2 0 0 1 4 0v2a2 2 0 0 1-4 0zM33 12h8a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1h-8a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1zm1-4h6v2h-6z" fill="#042f2e" opacity="1" data-original="#000000"></path><path d="M62 28a6.006 6.006 0 0 0-6-6h-6V7a1 1 0 0 0-1-1h-3V3a1 1 0 0 0-1-1H11a1 1 0 0 0-1 1v22H7a5.006 5.006 0 0 0-5 5v27a5.006 5.006 0 0 0 5 5h42a5 5 0 0 0 4.978-4.787l7.986-28.947A1 1 0 0 0 62 28zM48 8v22h-2V8zM12 4h32v26H24.414l-4.707-4.707A1 1 0 0 0 19 25h-7zm40 53a3 3 0 0 1-3 3H7a3 3 0 0 1-3-3V30a3 3 0 0 1 3-3h11.586l4.707 4.707A1 1 0 0 0 24 32h25a3 3 0 0 1 3 3zm2-7.385V35a5.009 5.009 0 0 0-4-4.9V24h6a4 4 0 0 1 4 3.872z" fill="#042f2e" opacity="1" data-original="#000000"></path><path d="M38 41h-5v-5a1 1 0 0 0-1-1h-8a1 1 0 0 0-1 1v5h-5a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h5v5a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-5h5a1 1 0 0 0 1-1v-8a1 1 0 0 0-1-1zm-1 8h-5a1 1 0 0 0-1 1v5h-6v-5a1 1 0 0 0-1-1h-5v-6h5a1 1 0 0 0 1-1v-5h6v5a1 1 0 0 0 1 1h5z" fill="#042f2e" opacity="1" data-original="#000000"></path></g></g></svg>

                                <span>Patients</span>
                            </th>
                            <th class="px-4 py-3">&nbsp;</th>
                        </tr>

                </thead>
                <tbody class="bg-white">
                @foreach (var item in Model.Patients!)
                {
                    <tr class="text-gray-700 even:bg-white odd:bg-teal-50 hover:bg-emerald-100">
                        <td class="px-4 py-3 border">
                            <div class="flex items-center text-md">
                                <div class="relative w-8 h-8 mr-3 rounded-full md:block">
                                    <img class="object-cover w-full h-full rounded-full" src="https://images.pexels.com/photos/5212324/pexels-photo-5212324.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="" loading="lazy"/>
                                    <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                                </div>
                                <div>
                                    <p class="font-semibold text-black">@item.FirstName @item.LastName</p>
                                        <p class="text-sm text-gray-600 mt-1">
                                            <span class="text-slate-900 text-bold">Date of Birth:</span> @item.DateOfBirth.ToString("dd MMMM yyyy")
                                        </p>
                                </div>
                            </div>
                        </td>
                         <td class="px-4 py-3 text-xs border">
                            <a asp-controller="Patient" asp-action="Info" asp-route-id="@item.Id" class="px-3 py-2 font-semibold uppercase leading-tight text-yellow-700 bg-yellow-100 rounded-sm transition ease-in-out delay-150 hover:bg-yellow-200">Info</a>
                            <a asp-controller="Patient" asp-action="Edit" asp-route-id="@item.Id" class="px-3 py-2 font-semibold uppercase leading-tight text-blue-700 bg-blue-100 rounded-sm transition ease-in-out delay-150 hover:bg-blue-200">Edit</a>
                            <a asp-controller="Patient" asp-action="Delete" asp-route-id="@item.Id" class="px-3 py-2 font-semibold uppercase leading-tight text-pink-700 bg-pink-100 rounded-sm transition ease-in-out delay-150 hover:bg-blue-200">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="flex justify-end">
            <nav aria-label="Page navigation">
                <ul class="inline-flex -space-x-px text-sm shadow-lg overflow-hidden">
                    <li>
                        <a asp-controller="Patient" asp-action="Index" asp-route-pageNumber="@((Model.CurrentPage - 1 > 0) ? Model.CurrentPage - 1 : 1)" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        @if (i == Model.CurrentPage)
                        {
                            <li>
                                <a asp-controller="Patient" asp-action="Index" asp-route-pageNumber="@i" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-teal-50 border border-gray-300 hover:bg-gray-100 hover:text-gray-700">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-controller="Patient" asp-action="Index" asp-route-pageNumber="@i" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">@i</a>
                            </li>
                        }
                    }   
                    <li>
                        <a asp-action="Index" asp-route-pageNumber="@((Model.CurrentPage + 1 > Model.TotalPages) ? Model.CurrentPage : Model.CurrentPage + 1)" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</section> 
}
